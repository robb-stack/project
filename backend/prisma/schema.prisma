generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  fullName  String
  email     String    @unique
  password  String
  bookings  Booking[] 
  activities UserActivity[]
}

model Vehicle {
  id        Int       @id @default(autoincrement())
  name      String
  rate      Float
  status    String     
  image     String?
  adjustedRate Float?
  bookings  Booking[]  
}

model Booking {
  id         Int     @id @default(autoincrement())
  userId     Int
  vehicleId  Int
  status    String
  user       User    @relation(fields: [userId], references: [id])
  vehicle    Vehicle @relation(fields: [vehicleId], references: [id])

  @@unique([userId, vehicleId]) 
}

model UserActivity {
  id         Int      @id @default(autoincrement())
  userId     Int
  accessedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

